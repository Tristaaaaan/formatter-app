# First Window


<FirstWindow>:
    name: "first"
    paragraph: paragraph
    result:result
                
    MDBoxLayout:
        orientation: 'vertical'
        spacing: 15
        pos_hint: {'center_x': 0.5, 'center_y': 0.55}
        size_hint: .9, .85
        MDCard:
            padding: 20
            elevation: 1
            ScrollView:
                MDTextField:
                    id: paragraph
                    multiline: True
                    mode: "rectangle"
                    font_style: 'Caption'
                    hint_text: "Copy-Paste the text here."
                    color_mode: 'custom'
                    line_color_focus: 0, 0, 0, 1
                    line_color_normal: 0, 0, 0, 1        
        MDCard:
            padding: 20
            elevation: 1
            ScrollView:    
                MDTextField:
                    id: result
                    multiline: True
                    font_style: 'Caption'
                    hint_text: "Here's the text."
                    disabled: True
                    color_mode: 'custom'
                    mode: "rectangle"
                    line_color_focus: 0, 0, 0, 1
                    line_color_normal: 0, 0, 0, 1
        MDBoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            MDFlatButton:
                text: "SUBMIT"
                font_name: "RobotoMedium"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                pos_hint: {'center_y': .5}
                size_hint: 0.50, None
                md_bg_color: [20/255, 20/255, 20/255, 1]
                on_release:
                    root.replace_text()
            MDIconButton:
                icon: "refresh"
                pos_hint: {'center_y': .5}
                size_hint: None, None
                on_release:
                    root.reset()
            MDIconButton:
                icon: "content-copy"
                size_hint: None, None
                pos_hint: {'center_y': .5}
                on_release:
                    root.copy()
            